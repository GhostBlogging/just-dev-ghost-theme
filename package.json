{
    "name": "gaplotech-blog-theme",
    "description": "A default theme for gaplo.tech blog",
    "demo": "https://gaplo.tech",
    "version": "1.0.0",
    "engines": {
        "ghost": ">=3.0.0",
        "ghost-api": "v3"
    },
    "license": "MIT",
    "screenshots": {
        "desktop": "assets/screenshot-desktop.jpg",
        "mobile": "assets/screenshot-mobile.jpg"
    },
    "scripts": {
        "dev": "webpack-dev-server --config webpack/webpack.config.dev.js",
        "lint": "eslint --fix --ext .js gulpfile.js src/js/",
        "build": "npm-run-all -s lint build:*",
        "build:test": "gscan --fatal --verbose .",
        "build:theme": "cross-env NODE_ENV=production webpack --config webpack/webpack.config.prod.js  --colors;",
        "build:zip": "gulp zip"
    },
    "author": {
        "name": "GapLoTech",
        "email": "gaplotech@gmail.com",
        "url": "https://gaplo.tech"
    },
    "gpm": {
        "type": "theme",
        "categories": [
            "Minimal",
            "Magazine"
        ]
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/gaplotech/gaplotech-blog-theme.git"
    },
    "bugs": "https://github.com/gaplotech/gaplotech-blog-theme/issues",
    "devDependencies": {
        "@babel/core": "^7.8.0",
        "@babel/plugin-proposal-class-properties": "^7.8.0",
        "@babel/plugin-syntax-dynamic-import": "^7.8.0",
        "@babel/polyfill": "^7.8.0",
        "@babel/preset-env": "^7.8.2",
        "@tryghost/release-utils": "0.3.3",
        "babel-loader": "^8.0.6",
        "babel-minify-webpack-plugin": "^0.3.1",
        "beeper": "^2.0.0",
        "browser-sync": "^2.26.7",
        "clean-webpack-plugin": "^3.0.0",
        "copy-webpack-plugin": "^5.1.1",
        "core-js": "^3.6.3",
        "cross-env": "^6.0.3",
        "css-loader": "^3.4.2",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.9.0",
        "eslint-config-standard": "^13.0.1",
        "eslint-loader": "^3.0.3",
        "eslint-plugin-import": "^2.18.2",
        "eslint-plugin-node": "^9.1.0",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-standard": "^4.0.0",
        "file-loader": "^4.3.0",
        "glob": "^7.1.6",
        "gscan": "3.1.1",
        "gulp": "4.0.2",
        "gulp-zip": "5.0.1",
        "html-webpack-plugin": "^4.0.0-beta.11",
        "mini-css-extract-plugin": "^0.8.0",
        "node-sass": "^4.13.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^1.19.1",
        "pump": "^3.0.0",
        "remove-files-webpack-plugin": "^1.2.2",
        "sass-loader": "^8.0.1",
        "style-loader": "^1.1.2",
        "uglifyjs-webpack-plugin": "^2.2.0",
        "webpack": "^4.41.5",
        "webpack-cli": "^3.3.10",
        "webpack-dev-server": "^3.10.1",
        "webpack-merge": "^4.2.2",
        "write-file-webpack-plugin": "^4.5.1"
    },
    "browserslist": [
        "defaults"
    ],
    "config": {
        "posts_per_page": 25,
        "image_sizes": {
            "xxs": {
                "width": 30
            },
            "xs": {
                "width": 100
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 600
            },
            "l": {
                "width": 1000
            },
            "xl": {
                "width": 2000
            }
        }
    },
    "dependencies": {
        "medium-zoom": "^1.0.5",
        "prismjs": "^1.19.0",
        "reframe.js": "^2.2.7",
        "vue": "^2.6.11"
    }
}
