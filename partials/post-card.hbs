<article class="post-card post {{#is "index"}}{{#has
  index="nth:6"}}post-card-large{{/has}}{{/is}}">

  {{#if feature_image}}
    <a class="post-card-image-link" href="{{url}}">
      {{!-- This is a responsive image, it loads different sizes depending on device
      https://medium.freecodecamp.org/a-guide-to-responsive-images-with-ready-to-use-templates-c400bd65c433 --}}
      <img class="post-card-image"
           srcset="{{img_url feature_image size="s"}} 300w,
                    {{img_url feature_image size="m"}} 600w,
                    {{img_url feature_image size="l"}} 1000w,
                    {{img_url feature_image size="xl"}} 2000w"
           sizes="(max-width: 1000px) 400px, 700px"
           src="{{asset "120x63.png"}}"
           onerror="this.classList.add('empty'); this.removeAttribute('srcset')"
           alt="{{title}}"
      />
      <div class="close-tag-placeholder">{{> icons/jbm-close-tag}}</div>
    </a>
  {{/if}}
  {{#unless feature_image}}
    <a class="post-card-image-link" href="{{url}}">
      <img class="post-card-image empty" src="{{asset "120x63.png"}}" alt="placeholder"/>
      <div class="close-tag-placeholder">{{> icons/jbm-close-tag}}</div>
    </a>
  {{/unless}}

  <div class="post-card-content">

    <div class="post-card-meta post-full-all-tags">
      {{#foreach tags}}
        <a href="{{url}}" title="{{name}}" class="post-card-primary-tag tag {{slug}}">{{name}}</a>{{#unless @last}}
        +{{/unless}}
      {{/foreach}}
    </div>
    <a class="post-card-content-link" href="{{url}}">
      <header class="post-card-header">
        <h2 class="post-card-title">{{title}}</h2>
      </header>

      <div class="post-card-byline-content">
      <span class="post-card-byline-date"><time datetime="{{date format="YYYY-MM-DD"}}">{{date
        format="D MMM YYYY"}}</time> <span class="bull">&bull;</span> {{reading_time}}</span>
      </div>
      <section class="post-card-excerpt">
        {{#if feature_image}}
          <p>{{excerpt characters="72"}}...</p>
        {{else}}
          <p>{{excerpt characters="92"}}...</p>
        {{/if}}
      </section>

    </a>

  </div>{{!--/.post-card-content--}}

</article>
