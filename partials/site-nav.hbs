<nav class="site-nav {{classes}}">
  <div class="site-nav-left-wrapper">
    <div class="site-nav-left">
      {{#if @site.logo}}
        <a class="site-nav-logo" href="{{@site.url}}"><img src="{{@site.logo}}" alt="{{@site.title}}"/></a>
      {{else}}
        <a class="site-nav-logo" href="{{@site.url}}">{{@site.title}}</a>
      {{/if}}
      <div class="site-nav-content">
        {{#if @site.navigation}}
          {{navigation}}
        {{/if}}
      </div>
    </div>
  </div>
  <div class="site-nav-right">
    {{> components/dark-mode-toggle}}
    <img class="nav-more-btn ripple hide-above-700" src="{{asset "more_vert-24px.svg"}}"/>

    {{#if @site.secondary_navigation}}
      {{navigation type="secondary"}}
    {{else}}
      <div class="social-links">
        {{#if @site.facebook}}
          <a class="social-link social-link-fb hide-below-700" href="{{facebook_url @site.facebook}}" title="Facebook" target="_blank"
             rel="noopener">{{> "icons/facebook"}}</a>
        {{/if}}
        {{#if @site.twitter}}
          <a class="social-link social-link-tw hide-below-700" href="{{twitter_url @site.twitter}}" title="Twitter" target="_blank"
             rel="noopener">{{> "icons/twitter"}}</a>
        {{/if}}
      </div>
      {{#unless @labs.members}}
        <a class="rss-button hide-below-700" href="https://feedly.com/i/subscription/feed/{{@site.url}}/rss/" title="RSS"
           target="_blank" rel="noopener">{{> "icons/rss"}}</a>
      {{/unless}}
    {{/if}}

    {{#if @labs.members}}
      <a class="subscribe-button hide-below-700" href="#subscribe">Subscribe</a>
    {{/if}}
  </div>

</nav>

<div class="full-site-nav-content">
  {{#if @site.navigation}}
    {{#foreach navigation}}
      <a class="full-nav nav-{{slug}}{{#if current}} nav-current{{/if}}" href="{{url absolute="true"}}">{{label}}</a>
    {{/foreach}}
  {{/if}}

</div>
